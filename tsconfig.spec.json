{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["vitest/globals", "@angular/platform-browser-dynamic/testing"]
  },
  "include": ["src/app/**/*.spec.ts", "src/**/*.d.ts"],
  "exclude": [
    "src/server/**/*",
    "src/server/**/*.spec.ts",
    "src/server/**/*.test.ts",
    "src/server/**/__tests__/**",
    "src/server.ts",
    "src/main.server.ts",
    "e2e/**/*",
    "node_modules/**/*"
  ]
}
